<h1 class="mb-1 restaurant-show-title">{{item.name}}</h1>
<div class="container pb-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa fa-cutlery pr-2"></i>
          類別：
        </span>
        {{item.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa fa-map-marker pr-2"></i>
          地址：
        </span>
        {{item.location}}
        <a href="{{item.google_map}}" class="text-secondary" target="_blank">
          <i class="fa fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fa fa-phone pr-2"></i>
          電話：
        </span>
        {{item.phone}}
      </p>

      <p class="mb-5">
        {{item.description}}
      </p>

      <img
        class="rounded mx-auto d-block mb-4 w-100"
        src="{{item.image}}"
        alt="{{item.name}}"
        style="max-width: 600px;"
      />

      <div
        class="edit-wrapper mb-4 d-flex align-items-center justify-content-center"
      >
        <a class="text-info" href="/">Home</a>
        <a class="text-info" href="/restaurants/{{item._id}}/edit">Edit</a>
        <form
          action="/restaurants/{{item._id}}?_method=DELETE"
          method="POST"
          style="display: inline;"
          class="mb-0"
        ><button
            type="submit"
            class="btn btn-info btn-sm"
          >Delete</button></form>
      </div>
    </div>
  </div>
</div>